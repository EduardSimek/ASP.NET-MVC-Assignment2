
@model IEnumerable<LeadsEntity>

<br />
<h2>Leads</h2>
<hr />
<br />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeadDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeadSource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeadStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextFollowUpDate)
        </th>

    </tr>

    @foreach (var emp in Model)
    {
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => emp.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.LeadDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.LeadSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.LeadStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.NextFollowUpDate)
            </td>
            <td>
                <form asp-action="EditLead" asp-route-Id="@emp.Id" method="post" style="display: inline-block;">
                    <button type="submit" class="btn btn-info">
                        <i class="bg-info bi-pen"></i> Edit
                    </button>
                </form>
                <form asp-action="DeleteLead" asp-route-Id="@emp.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this?');" style="display: inline-block;">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </td>
        </tr>
    }


</table>

<br />
<p>
    <a asp-action="AddLead" asp-controller="Leads" class="btn btn-primary">Add New Lead</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Back to The Home Page</a>
</p>